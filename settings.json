{
    "workbench.colorTheme": "Shades of Purple (Super Dark)",
    "workbench.iconTheme": "vscode-icons",
    "window.titleBarStyle": "custom", // removes top title bar
    "editor.fontFamily": "MonoLisa",
    "editor.fontLigatures": true,
    "editor.fontSize": 24,
    "editor.linkedEditing": true,
    "security.workspace.trust.untrustedFiles": "open",
    "git.autofetch": true,
    "git.confirmSync": false,
    "editor.inlineSuggest.enabled": true,
    "code-runner.runInTerminal": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.fontFamily": "monospace",
    "github.copilot.enable": {
      "*": true,
      "plaintext": true,
      "markdown": false,
      "scminput": false,
      "yaml": false,
      "cpp": false
    },
    "terminal.integrated.defaultProfile.linux": "bash",
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.default.compilerPath": "/usr/bin/clang++",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.clang_format_style": "Visual Studio",
    "C_Cpp.default.intelliSenseMode": "linux-clang-x64",
    "cmake.configureOnOpen": true,
    "settingsSync.ignoredExtensions": ["golang.go-nightly"],
    "explorer.confirmDragAndDrop": false,
    "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.formatOnSave": true,
    "editor.rulers": [80, 120],
    "diffEditor.ignoreTrimWhitespace": false // add rulers at 80 and 120 characters
    // "workbench.colorCustomizations": {
    //   "editorRuler.foreground": "#97d8e4"
    // }
    // "catppuccin.boldKeywords": false,
    // "catppuccin.italicComments": true,
    // "catppuccin.italicKeywords": false,
  }
  